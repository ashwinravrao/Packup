<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:orientation="vertical"
                        android:animateLayoutChanges="true">

                        <!-- INPUT FIELDS -->

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/name_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusTopStart="5dp"
                            app:boxCornerRadiusTopEnd="5dp"
                            app:boxCornerRadiusBottomStart="5dp"
                            app:boxCornerRadiusBottomEnd="5dp"
                            android:layout_marginBottom="16dp"
                            android:hint="@string/name_field_title"
                            android:textColorHint="@color/textcolor_muted">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/name_editable"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textcolor"
                                android:inputType="textCapWords"
                                android:textSize="16sp"
                                android:paddingStart="12dp"
                                android:paddingEnd="8dp"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/src_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusTopStart="5dp"
                            app:boxCornerRadiusTopEnd="5dp"
                            app:boxCornerRadiusBottomStart="5dp"
                            app:boxCornerRadiusBottomEnd="5dp"
                            android:layout_marginBottom="16dp"
                            android:hint="@string/source_field_title"
                            android:textColorHint="@color/textcolor_muted">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/src_editable"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textcolor"
                                android:inputType="textCapWords"
                                android:textSize="16sp"
                                android:paddingStart="12dp"
                                android:paddingEnd="8dp"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/dest_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusTopStart="5dp"
                            app:boxCornerRadiusTopEnd="5dp"
                            app:boxCornerRadiusBottomStart="5dp"
                            app:boxCornerRadiusBottomEnd="5dp"
                            android:layout_marginBottom="16dp"
                            android:hint="@string/dest_field_title"
                            android:textColorHint="@color/textcolor_muted">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/dest_editable"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textcolor"
                                android:inputType="textCapWords"
                                android:textSize="16sp"
                                android:paddingStart="12dp"
                                android:paddingEnd="8dp"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <!--<include-->
                            <!--android:id="@+id/name_input"-->
                            <!--layout="@layout/module_field"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_marginBottom="16dp" />-->

                        <!--<include-->
                            <!--android:id="@+id/source_input"-->
                            <!--layout="@layout/module_field"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_marginBottom="16dp" />-->

                        <!--<include-->
                            <!--android:id="@+id/dest_input"-->
                            <!--layout="@layout/module_field"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_marginBottom="16dp" />-->

                        <androidx.cardview.widget.CardView
                            style="@style/AppTheme.InputField.OuterCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                style="@style/AppTheme.InputField.InnerCard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:animateLayoutChanges="true"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/add_item_image_view"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginStart="8dp"
                                        android:src="@drawable/ic_add_item_disabled" />

                                    <EditText
                                        android:id="@+id/add_item_field_editable"
                                        style="@style/AppTheme.InputField.Editable" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12dp"
                        android:layout_weight="0.25"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/choose_photo_card"
                            style="@style/AppTheme.InputField.OuterCard"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginStart="4dp"
                            android:foreground="?android:attr/selectableItemBackground">

                            <androidx.cardview.widget.CardView
                                style="@style/AppTheme.InputField.InnerCard"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_menu_camera" />

                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/divider"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:alpha="0.5"
                    android:background="@color/divider"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/item_recycler_view"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <ImageView
            android:id="@+id/bottom_graphic_mars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:scaleType="centerCrop"
            android:src="@drawable/mars_fogg_edited" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>