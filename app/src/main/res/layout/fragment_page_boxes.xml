<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="filterActivated"
            type="Boolean" />

        <variable
            name="filters"
            type="String" />

        <variable
            name="filteredSize"
            type="String" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryLight">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:isScrollContainer="true"
            android:overScrollMode="ifContentScrolls">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryLight">

                <TextView
                    android:id="@+id/categories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/filter_button"
                    android:layout_marginStart="24dp"
                    android:text="@{filters}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                <TextView
                    android:id="@+id/filtered_size_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/categories"
                    app:layout_constraintBottom_toBottomOf="@id/filter_button"
                    android:text="@{filteredSize}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/top_row_view_holder"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/filter_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/nfc_button"
                    app:elevation="0dp"
                    app:fabCustomSize="45dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="@dimen/boxes_page_fab_top_margin"
                    app:borderWidth="0dp"
                    app:tint="@android:color/white"
                    app:rippleColor="@android:color/white"
                    android:backgroundTint="@{safeUnbox(filterActivated) ? @color/colorAccentGold : @color/unselected_fab}"
                    android:src="@drawable/ic_filter" />

                <TextView
                    android:id="@+id/filter_button_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/filter_button"
                    app:layout_constraintStart_toStartOf="@id/filter_button"
                    app:layout_constraintEnd_toEndOf="@id/filter_button"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/nfc_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/add_button"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="@dimen/boxes_page_fab_top_margin"
                    app:elevation="0dp"
                    app:fabCustomSize="45dp"
                    app:borderWidth="0dp"
                    app:rippleColor="@android:color/white"
                    app:tint="@android:color/white"
                    android:backgroundTint="@color/colorAccent"
                    android:src="@drawable/ic_nfc" />

                <TextView
                    android:id="@+id/nfc_button_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nfc"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/nfc_button"
                    app:layout_constraintStart_toStartOf="@id/nfc_button"
                    app:layout_constraintEnd_toEndOf="@id/nfc_button"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/add_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="@dimen/boxes_page_fab_top_margin"
                    app:elevation="0dp"
                    app:fabCustomSize="45dp"
                    app:borderWidth="0dp"
                    android:layout_gravity="end"
                    app:rippleColor="@android:color/white"
                    app:tint="@android:color/white"
                    android:backgroundTint="@color/colorAccent"
                    android:src="@drawable/ic_add_default" />

                <TextView
                    android:id="@+id/add_button_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/add_button"
                    app:layout_constraintStart_toStartOf="@id/add_button"
                    app:layout_constraintEnd_toEndOf="@id/add_button"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"/>

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/filter_button_caption"
                    android:layout_marginTop="16dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:overScrollMode="never"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>