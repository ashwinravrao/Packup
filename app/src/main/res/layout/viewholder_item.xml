<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="4dp"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:background="@drawable/background_outline_photo_button">

        <CheckBox
            android:id="@+id/item_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:focusable="false"
            style="@style/AppTheme.ItemCheckbox"/>

        <EditText
            android:id="@+id/item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@null"
            android:textSize="16sp"
            android:maxLines="1"
            android:inputType="textCapWords"
            android:textColorHint="@color/cardnumbercolor"
            android:textColor="@color/textcolor"
            android:paddingStart="12dp"
            android:paddingEnd="0dp"
            android:hint="@string/add_item_field_title"
            android:layout_marginEnd="4dp"/>

        <ImageButton
            android:id="@+id/item_remove_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_remove"
            android:layout_gravity="center"
            android:layout_marginEnd="4dp"/>

    </LinearLayout>

