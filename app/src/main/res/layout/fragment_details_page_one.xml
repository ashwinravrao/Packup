        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/notes_field"
            android:theme="@style/AppTheme.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusBottomEnd="5dp"
            app:boxCornerRadiusBottomStart="5dp"
            app:boxCornerRadiusTopEnd="5dp"
            app:boxCornerRadiusTopStart="5dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:hint="@string/hint_box_notes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            app:counterEnabled="true"
            app:counterMaxLength="250"
            app:counterOverflowTextColor="@color/warningRed"
            app:counterTextColor="@color/iconAndTextColor"
            app:layout_constraintTop_toBottomOf="@id/destination_field">

            <com.google.android.material.textfield.TextInputEditText
                android:paddingTop="32dp"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="3"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

