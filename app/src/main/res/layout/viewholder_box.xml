<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="box"
            type="com.ashwinrao.boxray.data.Box" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:focusable="false"
        android:elevation="4dp"
        android:background="@drawable/background_outline_photo_button">

        <TextView
            android:id="@+id/box_name_text_view"
            style="@style/AppTheme.CardTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{box.name}"
            tools:text="@string/box_name_placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/num_items_text_view"
            style="@style/AppTheme.CardTextAppearance.SubHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            tools:text="@string/box_num_items_placeholder" />

        <TextView
            android:id="@+id/box_number_text_view"
            style="@style/AppTheme.CardTextAppearance.Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="@string/box_number_placeholder_small" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>