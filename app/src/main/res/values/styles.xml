        <!--<item name="android:textSize">14sp</item>-->
        <!--<item name="android:visibility">gone</item>-->
    <!--</style>-->

    <style name="AppTheme.InputField.Editable" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/cardbackgroundcolor</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:textColorHint">@color/textcolor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.InputField.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:colorControlNormal">@color/colorAccent</item>
        <item name="android:colorControlActivated">@color/textcolor</item>
        <item name="android:colorControlHighlight">@color/textcolor_muted</item>
    </style>

</resources>
